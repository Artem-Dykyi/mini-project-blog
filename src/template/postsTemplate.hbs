{{#each posts}}
  <li class="post-item">
    <h1 class="post-title">{{title}}</h1>
    <p class="post-description">{{description}}</p>
    <button class="editPostButton" data-id="{{id}}">Редагувати</button>
    <button class="deletePostButton" data-id="{{id}}">Видалити</button>

    <div class="commentsContainer" data-id="{{id}}">
      <h3>Коментарі:</h3>
      <ul class="commentList" data-post-id="{{id}}">
        {{#each comments}}
          <li>{{this.text}}</li>
        {{/each}}
      </ul>
      <form class="createCommentForm" data-post-id="{{id}}">
        <input type="text" class="commentInput" placeholder="Новий коментар" required />
        <button type="submit">Додати коментар</button>
      </form>
    </div>
  </li>
{{/each}}
